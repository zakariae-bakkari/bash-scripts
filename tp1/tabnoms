#!/bin/bash

users=()
IFS=:
while read username rest; do
    users[${#users[*]}]=$username
done < /etc/passwd


echo "Nombre total d'utilisateurs : ${#users[*]}"

# tirer un nom au hasard (0 jusqua la taille du tableau)
index=$(( RANDOM % ${#users[*]} ))

echo "Utilisateur tirÃ© au hasard : ${users[$index]}"

